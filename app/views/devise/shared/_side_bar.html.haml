.side
  .side__header
    .side__header__box
      .side__header__box--user-name
        = current_user.name
      .side__header__box--menu
        .side__header__box--menu__new-group
        =link_to "", class: "side__header__box--menu__new-group" do
          =fa_icon 'edit'
        .side__header__box--menu__edit-user
        =link_to "", class: "side__header__box--menu__edit-user" do
          =fa_icon 'cog'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message